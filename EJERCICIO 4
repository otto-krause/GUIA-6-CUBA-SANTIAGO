#include <stdio.h>
#include <stdlib.h>
int main()
{
int A;
printf("Introduce un numero de algun dia de la semana: ");
scanf("%d", &A);
switch(A)
{

case 1:
    puts("Lunes");
    break;

case 2:
    puts ("Martes");
    break;

case 3:
    puts("Miercoles");
    break;

case 4:
    puts("Jueves");
    break;

case 5:
    puts("Viernes");
    break;

case 6:
    puts("Sabado");
    break;

case 7:
    puts ("Domingo");
    break;


default:
    puts("error");
    break;
}
system("pause");
}
