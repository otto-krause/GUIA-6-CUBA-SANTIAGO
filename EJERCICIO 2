#include <stdio.h>
#include <stdlib.h>
int main()
{
int A;
printf("Introduce el numero del mes que busca: ");
scanf("%d", &A);
switch(A)
{

case 1:
    ("mes de Enero con 31 dias");
    break;

case 2:
    puts ("mes de Febrero con 28 dias ");
    break;

case 3:
    puts("mes de Marzo con 31 dias");
    break;

case 4:
    puts("Mes de Abril con 30 dias");
    break;

case 5:
    puts("Mes de Mayo con 31 dias");
    break;

case 6:
    puts("Mes de Junio con 30 dias");
    break;

case 7:
    puts ("Mes de Julio con 31 dias");
    break;

case 8:
    puts("Mes de Agosto con 31 dias");
    break;

case 9:
    puts("Mes de Septiembre con 30 dias");
    break;

case 10:
    puts("Mes de Octubre con 31 dias");
    break;

case 11:
    puts("Mes de Noviembre con 30 dias ");
    break;

case 12:
    puts("Mes de Diciembre con 31 dias ");
    break;

default:
    puts("error");
    break;
}
system("pause");
}
