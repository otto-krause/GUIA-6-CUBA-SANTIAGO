#include <stdio.h>
#include <stdlib.h>
int main()
{
int A;
printf("Introduzca el numero del mes a visualizar sus dias: ");
scanf("%d", &A);
switch(A)
{

case 1:
    puts("Dias 31");
    break;

case 2:
    puts ("Dias 28 ");
    break;

case 3:
    puts("Dias 31");
    break;

case 4:
    puts("Dias 30 ");
    break;

case 5:
    puts("Dias 31");
    break;

case 6:
    puts("Dias 30");
    break;

case 7:
    puts ("Dias 31");
    break;

case 8:
    puts("Dias 31");
    break;

case 9:
    puts("Dias 30");
    break;

case 10:
    puts("Dias 31");
    break;

case 11:
    puts("Dias 30");
    break;

case 12:
    puts("Dias 31");
    break;

default:
    puts("error");
    break;
}
system("pause");
}
